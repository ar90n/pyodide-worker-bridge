{
  "name": "pyodide-bridge",
  "version": "0.1.0",
  "description": "Generate type-safe TypeScript bridges from annotated Python modules for Pyodide Web Workers",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./runtime": {
      "import": "./dist/runtime/index.js",
      "types": "./dist/runtime/index.d.ts"
    },
    "./react": {
      "import": "./dist/react/index.js",
      "types": "./dist/react/index.d.ts"
    }
  },
  "bin": {
    "pyodide-bridge": "./dist/cli/bin.js"
  },
  "files": [
    "dist",
    "parser"
  ],
  "scripts": {
    "build": "tsup && cp -r parser dist/parser",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "peerDependencies": {
    "comlink": "^4.4.0",
    "react": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "comlink": "^4.4.0",
    "prettier": "^3.0.0",
    "react": "^19.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18"
  }
}
